<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.inteagle.apis.struct.dao.IdInfoStructMapper">
	<resultMap id="BaseResultMap"
		type="com.inteagle.apis.struct.entity.IdInfoStruct">
		<result column="istruct_id" jdbcType="CHAR" property="userId" />
		<result column="id" jdbcType="CHAR" property="roleId" />
		<result column="x" jdbcType="VARCHAR" property="userName" />
		<result column="y" jdbcType="VARCHAR" property="gender" />
		<result column="t" jdbcType="VARCHAR" property="phone" />
	</resultMap>

	<sql id="Base_Column_List">
		istruct_id,id,x,y,t
	</sql>

	<!--查询所有数据 -->
	<select id="getAllIdInfoStructList" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"/>
		from idinfo_struct
	</select>

	<!--新增数据  -->
	<insert id="insert" parameterType="com.inteagle.apis.struct.entity.IdInfoStruct">
		INSERT INTO idinfo_struct
		VALUES(
				REPLACE(UUID(),"-",""),
				#{id,jdbcType=CHAR},
				#{x,jdbcType=CHAR},
				#{y,jdbcType=CHAR},
				#{t,jdbcType=CHAR},
				current_time
			)
	</insert>



</mapper>